{
    "extends": [
        "tslint-config-standard"
    ],
    "rules": {
        "no-multi-spaces": {
            "exceptions": { "ImportDeclaration": true }
        },
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ]
    }
}

